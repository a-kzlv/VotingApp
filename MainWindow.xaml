<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="VotingApp" Height="250" Width="180">
    <Grid>
        <Button Content="Registrieren" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Click="btn" Height="24" Width="141"/>
        <Button Content="Anmelden" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Click="btn2" Height="24" Width="141"/>
        <TextBox x:Name ="log" HorizontalAlignment="Left" Margin="10,39,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="24" Width="141"/>
        <PasswordBox x:Name ="pw" HorizontalAlignment="Left" PasswordChar="*" Margin="10,89,0,0" VerticalAlignment="Top" Height="24" Width="141"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-at" Text="Login"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="10,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="de-at" Text="Password"/></TextBlock>
    </Grid>
</Window>
