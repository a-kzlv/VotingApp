<Window x:Class="WpfApp2.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Window3" Height="270" Width="160">
    <Grid Margin="0,0,0,0">
        <PasswordBox x:Name ="r1" HorizontalAlignment="Left" Margin="10,175,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name ="r2" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name ="t1" HorizontalAlignment="Left" Margin="10,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Login und Passwort müssen mindestens 6 Zeichen enthalten und mindestens einen Großbuchstanben. Login Name:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,115,0,0" TextWrapping="Wrap" Text="Passwort (Zwei Mal eigenben):" VerticalAlignment="Top"/>
        <Button Content="Registrieren" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="120" Click="reg"/>

    </Grid>
</Window>
